---
import ChangeLanguage from './components/changeLanguage'

interface Props {
	title: string;
}

const { title } = Astro.props;

---

<!DOCTYPE html>
<html lang="pl" >
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Aplikacja dla Ciebie i Twojego najlepszego przyjaciela">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<ChangeLanguage client:only="solid-js" />
	</body>
</html>

